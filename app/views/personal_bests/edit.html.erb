<%= simple_form_for ([current_user, @personal_best]) do |f| %>
  <h3> Update your PR: </h3>
  <table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Exercise</th>
      <th>Score</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= f.input :date, label: false, input_html: { class: 'form-control' } %></td>
      <td><%= f.input :exercise, label: false, input_html: { class: 'form-control' } %></td>
      <td><%= f.input :score, label: false, input_html: { class: 'form-control' } %></td>
    </tr>
   </tbody>
   </table>
 
  <div class = "form-buttons">
    <%= f.button :submit, "Update PR", class:"btn btn-default pull-left"%>
    <%= link_to "Cancel", current_user, class:"btn btn-default pull-right" %>
  </div>
  
<% end %>
    

  
  
  
